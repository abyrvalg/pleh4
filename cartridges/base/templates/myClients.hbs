<head>
	<link rel="stylesheet" href="/css/style.css">
    <script src="/js/clients.js"></script>
</head>
{{@async head() /}}
<div id="clients_table">
    <div class="table_head">
        <div class="table_cell">Имя</div>
        <div class="table_cell">Телефон</div>
        <div class="table_cell">Тариф</div>|
        <div class="table_cell">Платеж</div>|   
    </div>
    {{@each(it.clients)=>client}}
    <div>
        <div class="table_cell name">{{client.name}}</div>
        <div class="table_cell phone">{{client.phone}}</div>
        <div class="table_cell rate">{{client.rate}}</div>        
        <div class="table_cell payment" title="https://4help.com.ua/payment?client={{client.id}}">
            <input value="https://4help.com.ua/oplata/?client={{client.id}}"/>
        </div>
        <div class="table_cell rate"><input type="button" class="remove_client" data-id="{{client.id}}" value="Удалить"/></div>
    </div>
    {{/each}}
    <input type="button" class="new_client" value="Новый"/> 
    <form class="new_client_form hidden">
        <input placeholder="Имя" name="name" value=""/>
        <input placeholder="Телефон" name="phone" value=""/>
        <input placeholder="Тариф" name="rate" value=""/>
        <input type="button" class="add_client" value="Добавить"/> 
        <input type="button" class="cancel" value="Отмена"/> 
    </form>
</div>