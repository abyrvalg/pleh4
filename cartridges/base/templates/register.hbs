<head>
	<link rel="stylesheet" href="/css/style.css">
    <script src="/js/form.js"></script>
</head>
<div>
    <form action="" data-target="user_register" data-cbsuccess="route:/user/confirm">
        <div class="input_wrap_vertical">
            <input name="email" placeholder="Email"/>
        </div>
        <div class="input_wrap_vertical">
            <input name="password" type="password" placeholder="Пароль"/>
        </div>
        <div class="input_wrap_vertical">
            <input name="confirmPassword" type="password" placeholder="Повторите пароль"/>
        </div>
        <div class="input_wrap_vertical">
            <input name="firstName" placeholder="Имя"/>
        </div>
        <div class="input_wrap_vertical">
            <input name="lastName" placeholder="Фамилия"/>
        </div>
        <div class="input_wrap_vertical">
            <input type="submit" class="register_submit" value="Register"/>
        </div>
    </form>
</div>